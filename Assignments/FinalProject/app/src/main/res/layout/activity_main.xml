<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mattiscool.matt.finalproject.MainActivity">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="@string/title" />

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtView01"
            android:layout_toEndOf="@+id/txtView01"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtView01"
            android:layout_marginTop="48dp"
            android:text="@string/link" />

        <EditText
            android:id="@+id/linkInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtView02"
            android:layout_toEndOf="@+id/txtView02"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ratingInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtView02"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/txtView0"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ratingInput"
            android:layout_alignParentStart="true"
            android:text="@string/rating" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
